<% layout('layouts/boilerplate') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-10 text-center mb-4">
      <h3><%= listing.title %></h3>
    </div>

    <div class="card col-md-8 show-card shadow-sm">
      <img src="<%= listing.image?.url || 'https://via.placeholder.com/600x400?text=No+Image' %>" 
           class="card-img-top show-img" 
           alt="listing_image" />
      <div class="card-body">
       <p class="card-text">Owned by  <i><%= listing.owner.username %></i></p>
        
        <p class="card-text mb-1"><%= listing.description %></p>
        <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
        <p class="card-text"><%= listing.location %>, <%= listing.country %></p>
      </div>
    </div>

    <!-- Buttons -->
    
<% if (currUser && currUser._id.toString() === listing.owner._id.toString()) { %>
    <div class="d-flex justify-content-center align-items-center gap-3 mt-4 flex-wrap show-buttons">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark show-btn">
        <i class="fas fa-edit"></i> Edit
      </a>

      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button type="submit" class="btn btn-danger show-btn delete-btn">
          <i class="fas fa-trash-alt"></i> Delete
        </button>
      </form>
    </div>
    <% } %>
   
    <!--REVIEW SECTION (inside the same row, properly aligned) -->
    <div class="col-md-8 mt-5">
      
      <% if(currUser) {%>
        <hr/>
      <h4 class="text-center mb-4">Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        <!-- Rating -->
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <select name="review[rating]" id="rating" class="form-select" required>
            <option value="" disabled selected>Select a rating</option>
            <option value="1">⭐ 1</option>
            <option value="2">⭐ 2</option>
            <option value="3">⭐ 3</option>
            <option value="4">⭐ 4</option>
            <option value="5">⭐ 5</option>
          </select>
          <div class="invalid-feedback">Please select a rating.</div>
        </div>

        <!-- Comment -->
        <div class="mb-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" class="form-control" rows="3" required></textarea>
          <div class="invalid-feedback">Comment cannot be empty.</div>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="btn btn-primary px-4">Submit Review</button>
        </div>
      </form>
      <hr />
      <% } %>
      
       <!-- <h4 class="mb-3">All Reviews</h4> -->

<% if (listing.reviews.length === 0) { %>
  <p class="text-muted">No reviews yet. Be the first to leave one!</p>
<% } %>
<% if (listing.reviews.length > 0) { %>
  <h4 class="mb-3">All Reviews</h4>
<% } %>

<div class="container px-0">
  <div class="row row-cols-1 row-cols-md-2 g-3" id="reviews-container">
    
    <% listing.reviews.forEach((review, index) => { 
         const isHidden = index >= 2;
         const comment = review.comment;
         const shouldTruncate = comment.length > 100;
         const truncated = comment.substring(0, 100);
    %>
      <div class="review-card fade-in <%= isHidden ? 'd-none' : 'show' %>">
  <div class="card shadow-sm h-100">
    <div class="card-body">
      
      <!-- AUTHOR NAME -->
      <p class="card-text text-muted mb-1">
  <i class="fas fa-user-circle me-1"></i>
  @<%= review.author.username %>
</p>

      <!-- COMMENT -->
      <p class="card-text review-comment" data-full="<%= comment %>">
        <%= shouldTruncate ? truncated + '...' : comment %>
        <% if (shouldTruncate) { %>
          <span class="text-primary read-more-btn" style="cursor:pointer;">Read more</span>
        <% } %>
      </p>

      <!-- STAR RATING -->
      <p class="card-text text-warning">
        <% for (let i = 0; i < review.rating; i++) { %>
          <i class="fas fa-star"></i>
        <% } %>
        <% for (let i = review.rating; i < 5; i++) { %>
          <i class="far fa-star"></i>
        <% } %>
      </p>

      <!-- DELETE BUTTON -->
      <form class="mb-3" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
        <button class="btn btn-sm btn-dark">Delete</button>
      </form>

    </div>
  </div>
</div>

    <% }) %>
  </div>
</div>

<% if (listing.reviews.length > 2) { %>
  <div class="text-center mt-3">
    <button id="read-more-btn" class="btn btn-outline-secondary">Read More Reviews</button>
  </div>
<% } %>

    
    </div>
   
  </div> <!-- end row -->
  <div id="map"
       style="height: 400px;"
       data-coordinates="<%= listing.geometry.coordinates[0] %>,<%= listing.geometry.coordinates[1] %>"
       data-title="<%= listing.title %>">
  </div>
</div> <!-- end container -->
<script src="/js/map.js"></script>